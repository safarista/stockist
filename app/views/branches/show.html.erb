<h3>
  Branch:
  <%= @branch.name %>
  <small class="pull-right btn">
    <%= link_to 'Edit', edit_branch_path(@branch) %> | <%= link_to 'Back', branches_path %>
  </small>
</h3>

<table class="table table-striped">
  <colgroup>
    <col width="20%" />
    <col width="10%" />
    <col width="20%" />
    <col width="20%" />
    <col width="20%" />
    <col width="10%" />
  </colgroup>
  <thead>
    <tr>
      <th>PLU</th>
      <th>Stock qty</th>
      <th>Min qty</th>
      <th>Max qty</th>
      <th>Root PLU</th>
      <th>Base Price</th>
    </tr>
  </thead>
  <tbody>
    <% @stock.each do |item| %>
    <tr>
      <td><%= link_to item.plu, stock_item_path(item) %></td>
      <td><%= item.stock_quantity %></td>
      <td><%= item.min_stock_quantity %></td>
      <td><%= item.max_stock_quantity %></td>
      <td><%= item.root_plu %></td>
      <td><%= item.bsretail_price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @stock %>
<br>

