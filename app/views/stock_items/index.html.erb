<h1>Listing stock_items<small class="pull-right"><%= link_to 'New Stock item', new_stock_item_path, class: "btn btn-small" %></small></h1>
<table class="table table-striped table-condensed">
  <colgroup>
    <col width="20%" />
    <col width="20%" />
    <col width="10%" />
    <col width="10%" />
    <col width="10%" />
    <col width="10%" />
    <col width="10%" />
    <col width="10%" />
  </colgroup>
  <tr>
    <th>Plu</th>
    <th>Branch</th>
    <th>Stock QTY</th>
    <th>Min stock </th>
    <th>Max stock </th>
    <th>Root plu</th>
    <th colspan="2">Actions</th>
  </tr>

<% @stock_items.each do |stock_item| %>
  <tr>
    <td><%= link_to stock_item.plu, stock_item_path(stock_item) %></td>
    <td><%= stock_item.branch.name %></td>
    <td><%= stock_item.stock_quantity %></td>
    <td><%= stock_item.min_stock_quantity %></td>
    <td><%= stock_item.max_stock_quantity %></td>
    <td><%= stock_item.root_plu %></td>
    <td><span class="btn-group"><%= link_to 'View', stock_item, class: 'btn btn-mini' %> <%= link_to 'Edit', edit_stock_item_path(stock_item), class: 'btn btn-mini' %></span></td>
    <td><%= link_to 'Delete', stock_item, class: 'btn btn-danger btn-mini', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @stock_items %>
