<%= simple_form_for(@stock_item, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :plu %>
    <%= f.association :branch, input_html: {disabled: true} %>
    <%= f.input :stock_quantity %>
    <%= f.input :min_stock_quantity %>
    <%= f.input :max_stock_quantity %>
    <%= f.input :root_plu %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
